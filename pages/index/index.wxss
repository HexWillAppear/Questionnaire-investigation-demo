/**index.wxss**/
.head-container{
  height: 20vh;
  width: 100vw;
}
.title{
  position: relative;
  width:100vw;
  color: #0095ff;
  font-weight: 900;
  font-size: x-large;
  text-align: center;
}
.tip{
  position:relative;
  font-size:small;
  width:85vw;
  margin-top: 50rpx;
  margin-left: 55rpx;
}
.divide-line{
  text-align: center;
  color:#bebebe;
}
.question-part{
  height: 900rpx;
  width:80xw;
  margin-top: 50rpx;
}
.completion{
  height: 15vh;
  margin-top: 50rpx;
}
.question{
  margin-left: 50rpx;
}
.question::before{
  content:"*";
  position: relative;
  font-size: 40rpx;
  color: red;
}
.completion-box{
  width: 85vw;
  margin-left: 50rpx;
  margin-top: 50rpx;
  border: #bebebe solid 2rpx;
  height: 6vh;
}
.radio-1,
.radio-2{
  border: #bebebe solid 2rpx;
  width:42vw;
  height:6vh;
  line-height: 65rpx;
  margin-top: 30rpx;
}
.rgroup{
  margin-top: 20rpx;
  margin-left: 50rpx;
}
.cgroup{
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
}
.check-box{
  border: #bebebe 2rpx solid;
  width:85vw;
  height: 6vh;
  margin-left: 49rpx;
  margin-top: 10rpx;
  line-height: 65rpx;
}
.buttom-bar{
  display: flex;
  margin-top: 40rpx;
  background-color: #e3e3e3;
  height: 8vh;
}
.text1{
  color: #595959;
  font-weight: 560;
}
.text3{
  color:#595959;
  margin-left: 70rpx;
}
.text2{
  color: #262626;
}
.text1,
.text2,
.text3{
  margin-top:30rpx;
}